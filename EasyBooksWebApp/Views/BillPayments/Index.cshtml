@model IEnumerable<EasyBooksWebApp.Models.BillPayment>

@{
    ViewData["Title"] = "Index";
}

<h2>Bill Payment</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethod.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountPaid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.FirstMidName) @Html.DisplayFor(modelItem => item.Supplier.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountPaid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BillPaymentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BillPaymentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BillPaymentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
